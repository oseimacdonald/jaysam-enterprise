<%- include('../partials/head', { title: title || 'Error' }) %>

<body>
    <%- include('../partials/header') %>
    <%- include('../partials/navigation') %>
    
    <main class="container">
        <div class="error-container text-center" style="padding: 4rem 0;">
            <h1 class="error-title" style="font-size: 4rem; color: var(--primary-color); margin-bottom: 1rem;">
                <%= typeof status !== 'undefined' ? status : '500' %>
            </h1>
            
            <h2 style="color: var(--text-dark); margin-bottom: 2rem;">
                <%= typeof title !== 'undefined' ? title : 'Server Error' %>
            </h2>
            
            <div class="error-message" style="background: white; padding: 2rem; border-radius: 8px; box-shadow: var(--shadow); max-width: 600px; margin: 0 auto;">
                <p style="font-size: 1.2rem; color: var(--text-light); margin-bottom: 2rem;">
                    <%= typeof message !== 'undefined' ? message : 'Something went wrong on our end.' %>
                </p>
                
                <div class="error-actions" style="display: flex; gap: 1rem; justify-content: center;">
                    <a href="javascript:history.back()" class="btn-secondary">Go Back</a>
                    <a href="/" class="btn-primary">Go Home</a>
                </div>
            </div>
            
            <% if (process.env.NODE_ENV === 'development' && typeof error !== 'undefined') { %>
                <div class="error-details" style="margin-top: 2rem; text-align: left; background: #f8f9fa; padding: 1rem; border-radius: 4px;">
                    <h4>Error Details (Development):</h4>
                    <pre style="white-space: pre-wrap; font-size: 0.9rem;"><%= error.stack %></pre>
                </div>
            <% } %>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>